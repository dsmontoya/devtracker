{
  "name": "Dev Tracker",
  "short_name": "Dev Tracker",
  "version": "1.0",
  "description": "Track your development activities",
  "permissions": ["storage"],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "clock-48.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
